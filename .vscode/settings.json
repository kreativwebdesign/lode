{
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.recipe.default": "first",
  "latex-workshop.latex.recipes": [
    {
      "name": "Default",
      "tools": [
        "clean-glsdefs",
        "latexmk",
      ]
    },
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "clean-glsdefs",
      "command": "rm",
      "args": [
        "-f",
        "%DOC%.glsdefs"
      ]
    },
  ],
  "[latex]": {
    "editor.formatOnSave": false
  }
}